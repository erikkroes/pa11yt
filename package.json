{
  "name": "color-tool",
  "version": "0.0.1",
  "description": "Color tool",
  "main": "index.html",
  "scripts": {
    "test": "karma start",
    "start:dev": "webpack-dev-server --mode development --open",
    "start:dev:es5": "webpack-dev-server --mode development --es5",
    "start:prod": "http-server dist/ -o",
    "build": "webpack --mode production",
    "build:stats": "webpack --mode production --profile --json > bundle-stats.json",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier '**/*.js' --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier '**/*.js' --write",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:es5": "karma start karma.es5.config.js",
    "test:es5:watch": "karma start karma.es5.config.js --auto-watch=true --single-run=false",
    "test:es5:bs": "karma start karma.es5.bs.config.js",
    "start": "owc-dev-server --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erikkroes/color-tool.git"
  },
  "author": "Erik Kroes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erikkroes/color-tool/issues"
  },
  "homepage": "https://github.com/erikkroes/color-tool#readme",
  "devDependencies": {
    "@open-wc/building-webpack": "^0.1.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "@open-wc/testing": "^0.9.0",
    "@open-wc/eslint-config": "^0.3.0",
    "@open-wc/prettier-config": "^0.1.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/testing-karma": "^0.4.0",
    "webpack-merge": "^4.1.5",
    "@open-wc/testing-karma-bs": "^0.2.0",
    "@open-wc/polyfills-loader": "^0.2.1",
    "owc-dev-server": "^0.1.2",
    "eslint-plugin-lit": "^0.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "lit-html": "^1.0.0",
    "lit-element": "^2.0.1"
  }
}
